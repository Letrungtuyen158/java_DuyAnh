<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_trip">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="50dip"
        android:layout_marginStart="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19dp"
            android:background="@color/colorBlue"
            android:text="ADD"
            android:textColor="@color/textWhite" />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#fff" />
        <Button
            android:id="@+id/dl_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="DELETE"
            android:textSize="19dp"
            android:textColor="@color/textWhite" />
        <View
            android:layout_height="match_parent"
            android:layout_width="4dp"
            android:background="#fff" />
        <Button
            android:id="@+id/get_trip"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="VIEW ALL"
            android:textColor="@color/textWhite" />
    </LinearLayout>
    <TextView
        android:id="@+id/Trip_Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/put_trip"
        android:layout_marginTop="49dp"
        android:textSize="19dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="List Trip "
        android:textColor="#fff"
       />
    <TextView
        android:id="@+id/Trip_All"
        android:layout_width="match_parent"
        android:textSize="19dp"
        android:layout_height="match_parent"
        android:layout_below="@id/Trip_Count"
        android:layout_marginTop="4dp"
        android:padding="9dp"
        android:textColor="#0d0dbf" />
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#fff" />
    <Button
        android:id="@+id/put_trip"
        android:layout_width="match_parent"
        android:textSize="19dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorBlue"
        android:text="SEARCH"
        android:textColor="@color/textWhite" />
</RelativeLayout>